<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.appjavafxmvc.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id ="nomeProgramaText" text="Programa APP JavaMVC"/>
    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <Label fx:id="nomeText" text="Informe seu nome:"/>
    <TextField  fx:id="nomeTextField"/>
    <HBox>
    <Button fx:id="okButton" text="Clique aqui" />
    <Button fx:id="limparButton" text="Limpar" />
    </HBox>


</VBox>
