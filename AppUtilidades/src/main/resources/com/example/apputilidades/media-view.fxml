<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      fx:controller="com.example.apputilidades.MediaController"
      prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="nota1Label" text="Informe a primeira nota"/>
    <TextField fx:id="nota1Text"/>
    <Label fx:id="nota2Label" text="Informe a segunda nota"/>
    <TextField fx:id="nota2Text"/>
    <Label fx:id="nota3Label" text="Informe a terceira nota"/>
    <TextField fx:id="nota3Text"/>
    <Button fx:id="calcularOk" text="Calcular" onMouseClicked="#onCalcularButtonClicked"/>
    <Label fx:id="resultadoLabel" text="Resultado aqui">
        <font>
            <Font name="arial" size="14.0"/>
        </font>
    </Label>
</VBox>
