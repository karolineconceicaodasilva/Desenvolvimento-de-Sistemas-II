<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      fx:controller="com.example.apputilidades.IMCController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>


    <Label fx:id="pesoLabel" text="Informe seu peso:"/>
    <TextField fx:id="pesoText"/>
    <Label fx:id="alturaLabel" text="Informe sua altura:"/>
    <TextField fx:id="alturaText"/>
    <Button fx:id="calcularButton" text="Calcular" onMouseClicked="#onCalcularButtonClicked"/>
    <Label fx:id="resultadoLabel" text="Resultado aqui">
        <font>
            <Font name="arial" size="14.0"/>
        </font>
    </Label>
</VBox>
