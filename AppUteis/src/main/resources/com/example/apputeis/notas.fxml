<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.apputeis.controller.NotasController"
      prefHeight="500.0" prefWidth="500.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="nota1Label" text="Informe a primeira nota:" />
    <TextField fx:id="nota1Text" />
    <Label fx:id="nota2Label" text="Informe a segunda nota:" />
    <TextField fx:id="nota2Text" />
    <Label fx:id="nota3Label" text="Informe a terceira nota:" />
    <TextField fx:id="nota3Text" />
    <Label fx:id="nota4Label" text="Informe a quarta nota:" />
    <TextField fx:id="nota4Text" />
    <Label fx:id="nota5Label" text="Informe a quinta nota:" />
    <TextField fx:id="nota5Text" />
    <HBox fx:id="painelButtons">
        <Button fx:id="calcularButton" onMouseClicked="#onCalcularMouseClicked" text="Calcular" />
        <Button fx:id="limparButton" onMouseClicked="#onLimparMouseClicked" text="Limpar" />
        <Button onMouseClicked="#onSairMouseClicked" text="Sair" />
    </HBox>
    <Label fx:id="resultadoLabel" />

</VBox>
